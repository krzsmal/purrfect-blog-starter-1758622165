@model IEnumerable<PurrfectBlog.Models.BlogPost>

@{
    ViewBag.Title = "All Blog Posts";
}

<main aria-labelledby="title">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="p-5 rounded-3 text-center mb-4">
        <h2 id="title">@ViewBag.Title</h2>
        <p class="lead">Discover amazing cat stories 🐾</p>
        <div class="mt-4">
            <a class="btn btn-success btn-lg m-2" href="@Url.Action("CreatePost", "BlogPost")">
                Write New Post
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">

                @foreach (var post in Model)
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 card-title mb-2">
                                @Html.ActionLink(
                                    linkText: post.Title,
                                    actionName: "Details",
                                    routeValues: new { id = post.Id },
                                    htmlAttributes: new { @class = "text-decoration-none" })
                            </h3>

                            <p class="text-muted mb-3">
                                <small>
                                    @post.CreatedAt.ToString("dd MMM, yyyy 'at' HH:mm")
                                    @if (!string.IsNullOrWhiteSpace(post.Category))
                                    {
                                        @: ·
                                        <span class="badge bg-info text-dark align-middle">
                                            @post.Category
                                        </span>
                                    }
                                </small>
                            </p>

                            <p class="card-text mb-3">
                                @{
                                    var text = post?.Content ?? "";
                                    var preview = text.Length > 200 ? text.Substring(0, 200) + "..." : text;
                                }
                                @preview
                            </p>

                            <a class="btn btn-outline-primary" href="@Url.Action("Details", "BlogPost", new { id = post.Id })">
                                Read More
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card border-info mb-4">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-2">No posts yet!</h4>
                        <p class="card-text mb-3">
                            Be the first to share a cat story. 😸
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</main>
