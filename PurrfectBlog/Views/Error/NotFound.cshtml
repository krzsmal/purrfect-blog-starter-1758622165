@{
    ViewBag.Title = "Page Not Found - Purrfect Blog";
}

<div class="jumbotron text-center mb-4">
    <h1 id="title" class="display-1">404</h1>
    <h2 class="mb-3">Oops! Page Not Found</h2>
    <p class="lead">
        The page you're looking for seems to have wandered off like a curious cat. 🐈
    </p>
    <div class="mt-4">
        <a class="btn btn-primary btn-lg m-2" href="@Url.Action("Index", "Home")">
            Go Home
        </a>
        <a class="btn btn-success btn-lg m-2" href="@Url.Action("Index", "BlogPost")">
            Browse Posts
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">What can you do?</h5>
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <h6>🏠 Go Home</h6>
                        <p class="small text-muted">Return to the homepage and explore our latest cat stories</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6>📝 Browse Posts</h6>
                        <p class="small text-muted">Check out all our amazing blog posts about cats</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

