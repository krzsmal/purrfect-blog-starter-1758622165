@{
    ViewBag.Title = "Bad Request - Purrfect Blog";
}

<div class="jumbotron text-center mb-4">
    <h1 id="title" class="display-1">400</h1>
    <h2 class="mb-3">Bad Request</h2>
    <p class="lead">
        Something went wrong with your request. Even cats make mistakes sometimes! 🙀
    </p>
    <div class="mt-4">
        <a class="btn btn-primary btn-lg m-2" href="@Url.Action("Index", "Home")">
            Go Home
        </a>
        <a class="btn btn-success btn-lg m-2" href="@Url.Action("Index", "BlogPost")">
            Browse Posts
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">What happened?</h5>
                <p class="text-muted">The request you sent couldn't be processed. This might be due to:</p>
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <h6>📋 Invalid Data</h6>
                        <p class="small text-muted">Some required information might be missing</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6>🔗 Broken Link</h6>
                        <p class="small text-muted">The link you followed might be corrupted</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

