@{
    ViewBag.Title = "Server Error - Purrfect Blog";
}

<div class="jumbotron text-center mb-4">
    <h1 id="title" class="display-1">500</h1>
    <h2 class="mb-3">Internal Server Error</h2>
    <p class="lead">
        Something went wrong on our end. Our server cats are working to fix this! 😿
    </p>
    <div class="mt-4">
        <a class="btn btn-primary btn-lg m-2" href="@Url.Action("Index", "Home")">
            Go Home
        </a>
        <a class="btn btn-success btn-lg m-2" href="@Url.Action("Index", "BlogPost")">
            Browse Posts
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">We're working on it!</h5>
                <p class="text-muted">An unexpected error occurred on our server. Please try again in a few minutes.</p>
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <h6>⏰ Try Again</h6>
                        <p class="small text-muted">The issue might be temporary</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6>🐱 Cat Maintenance</h6>
                        <p class="small text-muted">Our team is on it like cats on catnip</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

